<%- include("partials/header") %>
<div class="container" style="margin:15px auto;">
  <header class="jumbotron">
    <div class="container">
      <h1> Welcome to the campground page</h1>
      <p><a class="btn btn-warning" href="/new">add new campground</a>
      </p>
    </div>
  </header>
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% for(var i=0;i<campgrounds.length;i++){ %>
    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img src="<%=campgrounds[i].image%>">
        <div class="caption">
          <h3> <%= campgrounds[i].name; %> </h3>
          <a href="/campground/<%=campgrounds[i]._id%>" class="btn btn-danger">show</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

