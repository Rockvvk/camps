<%- include("partials/header") %>
<div class="container">
  <h3 style="text-align: center; margin:20px auto;"> EDIT <%=campground.name%></h3>
  <div class="row">
    <div style="margin:15px auto; width:30%;">
      <form action="/campground/<%=campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="camps[name]" value="<%=campground.name%>">
        </div>
        <div class="form-group">
          <input type="number" class="form-control" name="camps[price]" value="<%=campground.price%>"
            placeholder="image" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="camps[image]" value="<%=campground.image%>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="camps[description]" value="<%=campground.description%>">
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="camps[location]" id="location"
            value="<%= campground.location %>">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-lg btn-block">submit</button>
        </div>
      </form>
      <a href="/campground">goback</a>
    </div>
  </div>
</div>
<%- include("partials/footers") %>